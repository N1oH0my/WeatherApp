<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainFragment">


    <ImageView
        android:id="@+id/id_imageBGView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.7"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B53C1B60"
            android:backgroundTint="#4D3C1B60">

            <TextView
                android:id="@+id/id_cur_city_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:gravity="center"
                android:text="Voronezh"
                android:textAllCaps="false"
                android:textColor="#0E0721"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/id_cur_data"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_cur_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/amiko_semibold"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:text="27 july"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_cur_max_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="30 째C / 18 째C"
                android:textAllCaps="false"
                android:textColor="#0E0721"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_data" />

            <TextView
                android:id="@+id/id_real_feel_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:gravity="center"
                android:text="Real feel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_max_min" />

            <TextView
                android:id="@+id/id_cur_rf_max_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="35 째C / 18 째C"
                android:textAllCaps="false"
                android:textColor="#0E0721"
                android:textSize="42sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_real_feel_text" />

            <TextView
                android:id="@+id/id_cur_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="Good"
                android:textAllCaps="false"
                android:textColor="#0E0721"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/id_text_air"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_rf_max_min" />

            <TextView
                android:id="@+id/id_text_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="Air: "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_rf_max_min" />

            <TextView
                android:id="@+id/id_text_wind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="Wind: "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/id_cur_wind"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_rf_max_min" />

            <TextView
                android:id="@+id/id_cur_wind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="5 km/h"
                android:textAllCaps="false"
                android:textColor="#0E0721"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_rf_max_min" />

            <TextView
                android:id="@+id/id_cur_sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="4:38am"
                android:textAllCaps="false"
                android:textColor="#0E0721"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/id_text_sunrise"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_air" />

            <TextView
                android:id="@+id/id_text_sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="Sunrise: "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_text_air" />

            <TextView
                android:id="@+id/id_text_sunset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="Sunset: "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/id_cur_sunset"
                app:layout_constraintTop_toBottomOf="@+id/id_text_wind" />

            <TextView
                android:id="@+id/id_cur_sunset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#54296A"
                android:fontFamily="@font/amiko_semibold"
                android:text="8:00pm"
                android:textAllCaps="false"
                android:textColor="#0E0721"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_cur_wind" />

            <ImageButton
                android:id="@+id/id_search_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"

                android:src="@drawable/search_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/id_h_days_btn"
        style="@style/TabLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#7F3C1B60"
        android:backgroundTint="#7F3C1B60"
        app:layout_constraintEnd_toEndOf="@+id/cardView"

        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:textColor="#FFFFFF" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days"
            android:textColor="#FFFFFF" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/id_view_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_h_days_btn"
        app:layout_constraintStart_toStartOf="@+id/id_h_days_btn"
        app:layout_constraintTop_toBottomOf="@+id/id_h_days_btn"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>